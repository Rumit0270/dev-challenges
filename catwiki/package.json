{
  "name": "catwiki",
  "version": "1.0.0",
  "description": "Get to know cats more",
  "main": "index.ts",
  "author": "Rumit Tandukar",
  "license": "MIT",
  "scripts": {
    "start:dev": "export NODE_ENV=development && nodemon",
    "build": "tsc",
    "start": "export NODE_ENV=production && pm2-runtime start src/ecosystem.config.js --env production",
    "test": "export NODE_ENV=test && env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/tests/**/*.ts'",
    "docker-test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "postdocker-test": "docker-compose -f docker-compose.test.yml down",
    "dev": "docker-compose up",
    "heroku-postbuild": "yarn run build:server:prod && yarn run build:client:prod",
    "build:client:prod": "export NODE_ENV=development && cd client && yarn && export NODE_ENV=production && yarn run build",
    "build:server:prod": "rimraf build && yarn run build"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.1",
    "@types/nodemon": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.6",
    "morgan": "^1.10.0",
    "pm2": "^4.4.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  }
}
